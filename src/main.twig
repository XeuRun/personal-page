<!DOCTYPE HTML>
<html>
    <head>
        <title>{{ me }}</title>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <link rel="stylesheet" href="{{ env.path.assets }}/app.css" />
        {%- block stylesheets -%}{% endblock %}
    </head>
    <body>
        <div id="wrapper">
            {%- block body %}
                {% include './components/social/social.html.twig' %}
                {% include './components/profile/profile.html.twig' %}
                {% include './components/portfolio/portfolio.html.twig' %}
            {% endblock -%}
            <footer id="footer">
                <ul class="copyright">
                    <li>&copy; {{ me }}</li>
                </ul>
            </footer>
        </div>
        <script src="{{ env.path.assets }}/app.js"></script>
        {%- block javascripts -%}{%- endblock %}
    </body>
</html>